rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Any authenticated user can read user documents (needed for circle leaderboards)
      allow read: if request.auth != null;
      // Users can only write their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Daily schedule: Anyone can read, but only authenticated users can write
    match /dailySchedule/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Analytics: Anyone can write (for anonymous tracking), only admin can read
    match /analytics/{document=**} {
      allow write: if true;
      allow read: if request.auth != null && request.auth.token.email == 'davidvcarson@gmail.com';
    }
    
    // Circles collection (for friend groups/challenges)
    match /circles/{circleId} {
      // Helper function to validate name lengths
      function validNameLengths() {
        let data = request.resource.data;
        // Circle name must be <= 30 characters
        // Display names in memberNames must be <= 20 characters
        return data.name.size() <= 30;
      }
      
      // Anyone authenticated can create a circle with valid name lengths
      allow create: if request.auth != null && validNameLengths();
      
      // Anyone authenticated can read circles (needed to look up by invite code)
      allow read: if request.auth != null;
      
      // Members can update the circle (for joining, updating names, etc.)
      allow update: if request.auth != null && validNameLengths() && (
        // Creator can always update
        request.auth.uid == resource.data.createdBy ||
        // Existing members can update
        request.auth.uid in resource.data.members ||
        // New members can join (their uid will be in the new members array)
        request.auth.uid in request.resource.data.members
      );
      
      // Only creator can delete
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
